}

inline
fn __i_polyvec_frombytes(reg ptr u8[MLKEM_POLYVECBYTES] ap) -> stack u16[MLKEM_VECN]
{
  stack u16[MLKEM_VECN] r;
  inline int i;

  for i = 0 to MLKEM_K
  {
    r[MLKEM_N*i:MLKEM_N] = _poly_frombytes(r[MLKEM_N*i:MLKEM_N], ap[MLKEM_POLYBYTES*i:MLKEM_POLYBYTES]);
  }
  return r;
}

